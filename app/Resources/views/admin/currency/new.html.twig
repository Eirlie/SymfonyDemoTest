{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_currency_new' %}

{% block main %}
    <h1>{{ 'title.currency_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.numCode) }}
        {{ form_row(form.charCode) }}
        {{ form_row(form.rateToRuble) }}
        {{ form_row(form.default) }}

        <input type="submit" value="{{ 'label.create_currency'|trans }}" class="btn btn-primary" />

        {{ form_widget(form.saveAndCreateNew, { label: 'label.save_and_create_new', attr: { class: 'btn btn-primary' } }) }}

        <a href="{{ path('admin_currency_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
